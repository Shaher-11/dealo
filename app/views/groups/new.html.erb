<div class="container mt-5">
    <div class="text-center mb-5">
        <%= link_to 'javascript:history.back()' do %> <h3>
            <i class="fas fa-arrow-left"></i>Back </h3>
        <% end %>
        <br>
        <br>
        <h3>New Group</h3>
          </div>
    <div class="text-center mt-5">
    <%= form_with(model: @group, local: true) do |f| %>
      <%= f.text_field :name, placeholder: "Group name", class: "w-100" %><br/><br/>
      <%= f.submit class: 'btn btn-lg btn-primary w-100 mt-5' %>
    <% end %>
    </div>
</div>