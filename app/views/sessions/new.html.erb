<div class="container mt-5">
    <div class="text-center mb-5">
      <h2 class="text-warning"> <i class="fab fa-ideal text-warning"></i> Sign In</h2>
    </div>

    <div class="text-center mt-5 p-4">
        <%= form_with(url: sign_in_path, scope: :session, local: true) do |f| %>
    
            <%= f.text_field :name, placeholder: "Your Name", class: "w-100" %>
            <%= f.submit "Sign In", class: 'btn btn-success w-100 mt-4' %>
        <% end %>
    </div>
</div>